<div class="row pt-4">
  <div class="card glass">
    <div id="cartContainer" class="card-body">
      <h1>Carrito</h1>
      <hr />
      <div class="d-flex flex-row justify-content-between">
        <button type="button" id="removeAll" class="btn btn-secondary">
          Remover todos los productos
        </button>
        <button type="button" id="checkOut" class="btn btn-primary">
          Enviar pedido
        </button>
      </div>
      <hr />
      <div id="productList" class="row row-cols-1">
        <div class="col mb-2">
          <div class="card h-100 glass p-1">
            <h2>Total a pagar: $<span id="totalOrder">{{total}}</span></h2>
          </div>
        </div>
      </div>
      <div id="productList" class="row row-cols-1">
        {{#each listaDeProductosEnCarro}}
          <div class="col mb-2">
            <div class="card h-100 glass">
              <div class="row g-0">
                <div class="col-md-3">
                  <img
                    src="{{this.imageURL}}"
                    class="card-img-top"
                    alt="{{this.description}}"
                  />
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <p class="mb-0">
                      <span class="badge bg-secondary">{{this.category}} </span>
                    </p>
                    <h5 class="card-title mt-2">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <div class="row justify-content-between">
                      <div class="col">
                        <p class="mb-0">
                          Precio
                        </p>
                        <span class="badge bg-info">${{this.price}} </span>
                      </div>
                      <div class="col">
                        <p class="mb-0">
                          Cantidad
                        </p>
                        <span class="badge bg-danger">
                          {{this.qty}}
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{else}}
          <div class="container text-center">
            <h2>No se encontraron productos</h2>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>